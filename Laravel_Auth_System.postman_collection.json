	"event": [
		{
			"listen": "test",
			"script": {
				"exec": [
					"// Test untuk memastikan response format yang konsisten",
					"pm.test(\"Response format is correct\", function () {",
					"    const response = pm.response.json();",
					"    pm.expect(response).to.have.property('status');",
					"    pm.expect(response.status).to.be.oneOf(['success', 'error']);",
					"    if (response.status === 'success') {",
					"        pm.expect(response).to.have.property('message');",
					"        pm.expect(response).to.have.property('data');",
					"    } else {",
					"        pm.expect(response).to.have.property('message');",
					"    }",
					"});",
					"",
					"// Test untuk status code yang sesuai",
					"pm.test(\"Status code is valid\", function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 400, 401, 403, 404, 422, 429, 500]);",
					"});"
				],
				"type": "text/javascript"
			}
		}
